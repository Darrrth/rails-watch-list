<div class="container">
  <h1><%= @list.name %></h1>
  <h3>Movies</h3>
  <% @list.bookmarks.each do |bookmark|%>
    <div class="card">
      <%= image_tag bookmark.movie.poster_url, alt: "text" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
      <%= link_to bookmark_path(bookmark), class: 'card-remove-link', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete it?"} do %>
        <p class = "btn btn-primary mx-3 mt-3">Delete</p>
      <% end %>
    </div>
  <% end %>
  <%= link_to lists_path, class: 'btn btn-success mt-2' do %>
    <i class="fa-solid fa-house"></i>
  <% end %>
</div>
<!-- IMG TAG -->
<% if @list.photo.attached? %>
  <%= cl_image_tag @list.photo.key, height:300, width:350, crop: :fill %>
<% else %>
  <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>
<% end %>
<%= link_to "Create a New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mx-3 mt-3" %>
