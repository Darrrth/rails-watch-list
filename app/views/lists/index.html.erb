<div class="card-category flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1540959733332-eab4deabeeaf?q=80&w=1194&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  Movies for you
  <h1>List</h1>
</div>
<div class="container my-3">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="item card-category mx-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
        <h2 class="text-center"><%= list.name %></h2>
        <%= link_to "", list_path(list), class: "card-trip-link" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a New List", new_list_path, class: "btn btn-primary mx-3 mt-3" %>
</div>
